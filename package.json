{
  "name": "github-confluence-changelog",
  "version": "1.0.0",
  "description": "Chrome extension to monitor GitHub PRs and log them to Confluence",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:watch": "./dev-watch.sh",
    "dev:build": "tsc && vite build --mode development --sourcemap",
    "build": "tsc && vite build",
    "build:extension": "./build-extension.sh",
    "build:zip": "./build-extension.sh zip",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:css": "stylelint 'src/**/*.css'"
  },
  "keywords": [
    "chrome-extension",
    "github",
    "confluence",
    "changelog"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.263.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "semver": "^7.7.2",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.5.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.45.0",
    "postcss": "^8.4.27",
    "postcss-syntax": "^0.36.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.5"
  }
}
